apiVersion: vmoperator.vmware.com/v1alpha1
kind: VirtualMachineClass
metadata:
  name: guaranteed-small-gpu-usb
  namespace: default
spec:
  hardware:
    cpus: 2
    memory: 4Gi
    devices:
      dynamicDirectPathIODevices:
        # Intel UHD 770 GPU
        - deviceID: 0x9a49
          vendorID: 0x8086
        # RealSense D435 USB Camera  
        #- deviceID: 0x0b07
        #  vendorID: 0x8086
  policies:
    resources:
      requests:
        memory: 4Gi
      limits:
        memory: 4Gi

---
apiVersion: vmoperator.vmware.com/v1alpha1
kind: VirtualMachine
metadata:
  name: bbt-vision-gpu
  namespace: default
  annotations:
    vmoperator.vmware.com/image-supported-check: disable
spec:
  className: guaranteed-small-gpu-usb
  # OVA must be at least with VHW versio 17 or higher, ensure correct path below
  imageName: 192.168.8.100/ubuntu22-srv-iot-intel.ova
  networkInterfaces:
  - ethernetCardType: vmxnet3
    networkName: VM Network
  powerState: poweredOn
  vmMetadata:
    configMapName: user-data
    transport: CloudInit

---
apiVersion: v1
kind: ConfigMap
metadata:
    name: user-data
    namespace: default
data:
  user-data: |
    #cloud-config
    hostname: ubuntu-server
    manage_etc_hosts: true
    users:
      - name: ubuntu
        sudo: ALL=(ALL) NOPASSWD:ALL
        groups: users, admin
        home: /home/ubuntu
        shell: /bin/bash
        lock_passwd: false
        ssh-authorized-keys:
          - "ssh-rsa  user@broadcom.com"
    ssh_pwauth: true
    disable_root: false
    chpasswd:
      list: |
         ubuntu:ubuntu
      expire: False
    package_update: true
    packages:
      - open-vm-tools
    runcmd:
     - systemctl enable open-vm-tools.service
     - systemctl start open-vm-tools.service
